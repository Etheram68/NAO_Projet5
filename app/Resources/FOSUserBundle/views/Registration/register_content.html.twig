{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

<div class="container">

	<div class="form-group row col-lg-12 col-sm-12">
		{# Nom #}
		<div class="col-lg-6">
			{# {% set formNom = 'form.nom'|trans %} #}
			{{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'control-label'} }) }}
			{{ form_errors(form.lastname) }}			
			{{ form_widget(form.lastname, {'attr': {'class': 'form-control'} }) }}
		</div>
		{# Prénom #}
		<div class="col-lg-6">
			{{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'control-label'} }) }}
			{{ form_errors(form.firstname) }}			
			{{ form_widget(form.firstname, {'attr': {'class': 'form-control'} }) }}
		</div>
	</div>
	<div class="form-group row col-lg-12 col-sm-12">
		{# Pseudo #}
		<div class="col-lg-6">
			{{ form_label(form.username, 'Pseudo', {'label_attr': {'class': 'control-label'} }) }}
			{{ form_errors(form.username) }}			
			{{ form_widget(form.username, {'attr': {'class': 'form-control'} }) }}
		</div>
		{# Ville, à remplacer par liste déroulante #}
		<div class="col-lg-6">
			{{ form_label(form.town, 'Ville', {'label_attr': {'class': 'control-label'}}) }}
			{{ form_errors(form.town) }}			
			{{ form_widget(form.town, {'attr': {'class': 'form-control'} }) }}	
		</div>
	</div>
	<div class="form-group row col-lg-12 col-sm-12">
		{# Email #}
		<div class="col-lg-6">
			{{ form_label(form.email, 'Email', {'label_attr': {'class': 'control-label'} }) }}
			{{ form_errors(form.email) }}			
			{{ form_widget(form.email, {'attr': {'class': 'form-control'} }) }}
		</div>
		{# Présentation #}
		<div class="col-lg-6">
			{{ form_label(form.presentation, 'Présentation', {'label_attr': {'class': 'control-label'}}) }}
			{{ form_errors(form.presentation) }}			
			{{ form_widget(form.presentation, {'attr': {'class': 'form-control'} }) }}	
		</div>
	</div>

	<div class="form-group row col-lg-6 col-sm-6" style="padding-left: 30px;">
	    {{ form_widget(form) }}
    </div>
	<div>
		<input type="submit" value="{{ 'registration.submit'|trans }}" />
	</div>

</div>

{{ form_end(form) }}
