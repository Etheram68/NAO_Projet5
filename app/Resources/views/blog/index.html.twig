{# blog/index.html.twig #}

{% extends "blog/layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block naoblog_body %}

    <h2>Liste des articles</h2>

    <ul>
        {% for article in listArticles %}
            <li>
                <a href="{{ path('nao_blog_view', {'id': article.id}) }}">
                    {{ article.title }}
                </a>
                par {{ article.author }},
                le {{ article.date|date('d/m/Y') }}

                {{ article.content }}
            </li>
        {% else %}
            <li>Pas (encore !) d'article</li>
        {% endfor %}
    </ul>

