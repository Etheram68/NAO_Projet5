                                    <ul class="blog-meta">
                                        <li><span class="ti-user"></span> <a href="#">{{ article.author }}</a></li>
                                        <li><span class="ti-calendar"></span> <a href="#">{{ article.date | date ('d/m/Y') }}</a></li>
