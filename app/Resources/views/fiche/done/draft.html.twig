{% extends "layout.html.twig" %}

{% block title %}Brouillons - {{ parent() }}{% endblock %}

{% block body %}
    <header class="header-404 overlay full-404 relative v-center" id="home-page">
        <div class="absolute anlge-bg"></div>
        <div class="container">
            <div class="row v-center">
                <div class="col-xs-12 col-md-7 header-text">
                    <h2>Votre Fiche</h2>
                    <h3>Brouillons</h3>
                </div>
            </div>
        </div>
        </div>
    </header>

    <section class="section-padding gray-bg" id="blog-page">
        <div class="container">
            <div class="row">
                <main class="container marge-top">
                    <section>
                        {% if birdlist|length > 0 %}
                            <div class="row">
                                <div id="eltlist" data-maxPage="{{ paginate.maxPages }}">
                                    {% for bird in birdlist %}
                                        <div class="col s12 m6" >
                                            {% include 'fiche/cards/bird_state.html.twig' with {'bird':bird, 'action': 'edit' } only %}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% else %}
                            <div class="row">
                                <div class="col s12">
                                    <p>Vous n'avez pas de Fiche en brouillons</p>
                                </div>
                            </div>
                        {% endif %}
                    </section>
                </main>
            </div>
        </div>
    </section>
{% endblock %}

{% block script %}
    <script>
        /**
         *
         * @param pageno
         * @param user_id
         */
        function getList(pageno, no) {
            var status = $('.tab').find('.active').attr('id');
            $.ajax({
                url: "{{ path('api_obs_paginate') }}?bearer={{ token }}",
                type: "POST",
                dataType: "json",
                data: {
                    "page": pageno,
                    "state": 'my_draft'
                },
                success: function (response) {
                    $('#eltlist').html(response.html);
                }
            });
        }
    </script>
{% endblock %}