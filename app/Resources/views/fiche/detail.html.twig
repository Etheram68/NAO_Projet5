{% extends "layout.html.twig" %}

{% block title %}Fiche - {{ parent() }}{% endblock %}

{% block body %}
    <!--Header-area-->
    <header class="header-area-fiches overlay full-height-miniHeader relative v-center">
        <div class="absolute anlge-bg"></div>
            <div class="container">
                <div class="row v-center">
                    <div class="col-xs-12 col-md-7 header-text-fiches">
                        <h2>Les fiches oiseaux</h2>
                        {# <h3>La fiche est en attente de validation</h3> #}
                    </div>
                </div>
            </div>
    </header>
    <section class="section-padding gray-bg" id="blog-page">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="card no-style observation no-border">
                            <div class="item active row">
                                <div class="v-center">
                                    <div class="col-xs-12 col-md-6">
                                        <div class="caption-photo one" data-animation="animated fadeInRight">
                                            <img src="{{ asset('bundles/naocore/img/oiseaux/observations/' ~ bird.imagePath ) }}" alt="Image d'un oiseaux">
                                        </div>
                                        <div class="observedby">
                                        <p>Valider par : <br />
                                        <div class="observation-validate-content">
                                            <span>
                                                <img class="circle" src="{{ asset('bundles/naocore/img/pictos/user-avatar.png' ) }}" alt="Photo de profil" style="max-width: 10%;"/>
                                            </span>
                                            <div class="observation-validate-detail">
                                                <a href="{{ path('user.username', {'id' : bird.user.id, 'username' : bird.user }) }}"
                                                   class="bleen">{{ bird.user }}</a>
                                            </div>
                                        </div>
                                    </div>
                                    </div>
                                    <div class="col-xs-12 col-md-6">
                                        <div class="caption-title" data-animation="animated fadeInUp">
                                            <h2>{{ bird.taxref.commonName }}<br/></h2>
                                        </div>
                                        <div class="caption-desc" data-animation="animated fadeInUp">
                                            <p>Ordre: {{ bird.taxref.ordo }}</p>
                                            <p>Famille: {{ bird.taxref.familia }}</p>
                                            <p>Genre: {{ bird.taxref.taxonsc }}</p>
                                        </div><br />
                                        <div class="caption-desc" data-animation="animated fadeInUp">
                                            <p>Taille: {{ bird.size }}</p>
                                            <p>Principal Couleur: {{ bird.color }}</p> <br />
                                            <p>Commentaire: <br />{{ bird.feature }}</p>
                                        </div>
                                    </div>                               
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}