{% block navbar %}
    <div class="mainmenu-area" data-spy="affix" data-offset-top="100">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#primary-menu">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {# LOGO #}
                {% if (app.request.requesturi == path('homepage')) %}
                  <a href="{{ path('homepage') }}" class="navbar-brand logo"><img src="{{ asset('bundles/naocore/img/logo-nao-noir.png') }}" \></a>
                {% else %}
                  <a href="{{ path('homepage') }}" class="navbar-brand logo"><img src="{{ asset('bundles/naocore/img/logo-nao-jaune.png') }}" \></a>
                {% endif %}
            </div>
            <nav class="collapse navbar-collapse" id="primary-menu">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="{{ path('observation.map') }}">Carte</a></li>
                    <li><a href="#">Blog</a></li>
                    <li><a href="#">Salle de Jeux</a></li>
                    <li><a href="#">A propos</a></li>
                    <li><a href="#">Contact</a></li>
                    {# CONNEXION/DÉCONNEXION #}
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                      <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                      </li>
                    {% else %}
                      <li><a href="{{ path('fos_user_security_login') }}">
                      Connexion</a>
                      </li>
                    {% endif %}
                    {% if (is_granted("IS_AUTHENTICATED_REMEMBERED")) and (is_granted("ROLE_ADMIN")) %}
                      <li><a href="{{ path('admin') }}">Bonjour {{ app.user.username }} !</a>
                      </li>
                    {% elseif is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                      <li><a href="{{ path('fos_user_profile_show') }}">Bonjour {{ app.user.username }} !</a>
                      </li>
                    {% endif %}
                    <li><a href="javascript:void(0)" class="dropdown-button" data-activates="dropdown-search"><i class="material-icons">search</i></a></li>
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}